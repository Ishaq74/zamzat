---
import { Icon } from 'astro-icon/components';
import { type CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'recipeCategories'>;
}

const { entry } = Astro.props;

// Vérifiez si entry existe et a une propriété data
if (!entry || !entry.data) {
  return null; // Ou affichez un message d'erreur ou un placeholder
}

const { 
  name, 
  description, 
  image
} = entry.data;

const id = entry.id;
---

<article class="bg-white border border-gray-200 p-4 rounded-md shadow-md hover:shadow-xl transition-shadow h-full">
  <a href={`/recipes/${id}`} class="block">
    <img src={image} alt={name} class="w-full h-48 object-cover rounded-md" />
    <h3 class="mt-4 font-semibold text-gray-800">{name}</h3>
    <p class="mt-2 text-gray-600">{description}</p>
  </a>
</article>
